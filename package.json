{
  "name": "butterfly-apps",
  "version": "1.0.0",
  "private": true,
  "description": "BUTTERFLY ecosystem applications - CI/CD and developer tooling",
  "scripts": {
    "prepare": "husky",
    "lint:java": "echo 'Java linting runs via Maven checkstyle'",
    "lint:portal": "npm --prefix PERCEPTION/perception-portal run lint",
    "lint:docs": "find docs -name '*.md' -exec npx markdown-link-check {} --config .markdown-link-check.json \\;",
    "lint:docs:semantic": "python scripts/lint-docs.py",
    "test:portal": "npm --prefix PERCEPTION/perception-portal run test",
    "build:common": "mvn -f butterfly-common/pom.xml install -DskipTests",
    "security:check": "scripts/security/check-secure-config.sh"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "markdown-link-check": "^3.12.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/254CARBON/BUTTERFLY.git"
  },
  "license": "UNLICENSED"
}
